{
    "version": 2,
    "builds": [
        {
            "src": "wsgi.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.12"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/wsgi.py",
            "methods": [
                "GET",
                "POST"
            ],
            "headers": {
                "Content-Type": "text/html; charset=utf-8"
            },
            "config": {
                "maxDuration": 30
            }
        }
    ]
}